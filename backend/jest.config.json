{
  "testEnvironment": "node",
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "**/*.js",
    "!node_modules/**",
    "!coverage/**",
    "!jest.config.js",
    "!index.js",
    "!tests/**",
    "!db/test-db.js"
  ],
  "testMatch": [
    "**/tests/unit/**/*.test.js"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 70,
      "functions": 70,
      "lines": 70,
      "statements": 70
    }
  },
  "verbose": true,
  "testTimeout": 10000,
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "reporters": [
    "default",
    ["jest-junit", {
      "outputDirectory": "coverage",
      "outputName": "junit.xml"
    }]
  ]
}